@using PierresVendors.Models;
@{
  Layout = "_Layout";
}

<form action="/vendors/@Model.Id/orders" method="post">
<input id="orderId" name="orderId" type="hidden" value="@Model.Id">
<label for="orderTitle">Order Title:</label>
<input id="orderTitle" name="orderTitle"><br>
<label for="orderDate">Order Date:</label>
<input id="orderDate" name="orderDate" type="date"><br>
<label for="orderDescription">Order Description:</label>
<input id="orderDescription" name="orderDescription" type="text"><br>
<label for="orderPrice">Order Price:</label>
<input id="orderPrice" name="orderPrice" type="number" step=".01"><br>
<button type="submit">Add Order.</button>
</form>