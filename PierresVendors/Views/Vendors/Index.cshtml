@using PierresVendors.Models;

@{
  Layout = "_Layout";
}
<div id="container">
  <br><br>
@if (@Model.Count == 0)
{
  <h2>You have no vendors yet. </h2>
  <h3><a href='/vendors/new'>Please add some vendors.</a></h3>
}
else
{
  <h2>Your Vendors:</h2>
 
  @foreach (Vendor vendor in Model)
  {
    <a href='/vendors/@vendor.Id'>@vendor.Name</a><br>
  }
<br>
<a href='/vendors/new'>Add a new vendor.</a>  
}
</div>
