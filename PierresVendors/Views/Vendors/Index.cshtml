@using PierresVendors.Models;
@{
  Layout = "_Layout";
}

<h2>Your Vendors:</h2>
@if (@Model.Count == 0)
{
  <h2>You have no vendors yet. </h2>
  <a href='/vendors/new'>Please add some vendors.</a>
}
else
{
<ul>
@foreach (Vendor vendor in Model.VendorList)
{
<li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
}
</ul>
<a href='/vendors/new'>Add a new vendor.</a>  
}
