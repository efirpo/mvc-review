@using PierresVendors.Models;
@{
  Layout = "_Layout";
}
<div id="container">
<h2>@Model["vendor"].Name</h2>
<h2>Description:</h2>
<p>@Model["vendor"].Description</p>
<h2>Orders:</h2>
@if (@Model["orders"].Count == 0)
{
  <p>There are no orders to show.</p>
  <p>Please add some orders.</p>
}
else
{  
  @foreach (Order order in @Model["orders"])
  {
    <div class="card">
    <center><h3>@order.Title</h3></center>
    <ul>
    <li>Order Date: @order.Date</li>
    <li>Order Description: @order.Description</li>
    <li>Order Price: @order.Price</li>
    </ul><br><br>
    </div>
  }
}
<a href='/vendors/@Model["vendor"].Id/orders/new'>Add an order for this Vendor.</a><br><br>
<a href='/vendors'>Return to Vendors list.</a>
</div>